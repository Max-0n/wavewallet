mixin chart()
  svg#chart
    linearGradient#gradientBottom(x1="50%" y1="0%" x2="50%" y2="100%")
      stop(offset="0%", stop-color="var(--chartFillFrom)")
      stop(offset="100%", stop-color="var(--chartFillTo)")
    linearGradient#gradientTop(x1="50%" y1="0%" x2="50%" y2="100%")
      stop(offset="0%", stop-color="var(--chartFillTo)")
      stop(offset="100%", stop-color="var(--chartFillFrom)")
